{
  // https://nuxt.com/docs/guide/concepts/typescript
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "components": [
        "components/*"
      ],
      "composables": [
        "composables/*"
      ],
      "//": ["These two fix the type errors in node_modules"],
      "#imports": [".nuxt/imports.d.ts"],
      "#app/*": [
        "node_modules/nuxt/dist/app/*"
      ]
    }
  }
}
